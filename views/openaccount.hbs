{{> banner}}
<form action="/main" method="POST"> 
{{!-- change action name --}}
  <div class="card text-center" id="account-selection-box">
    <h5 class="card-header">Select an Account</h5>
    <div class="card-body">
      <div class="form-check my-1">
        <input type="radio" class="form-check-input" name="typeofaccount" value="Checking">
        <label class="form-check-label ml-5" for="checking">Checking Account</label>
      </div>
      <div class="form-check my-1">
        <input type="radio" class="form-check-input" name="typeofaccount" value="Savings">
        <label class="form-check-label ml-5" for="savings">Savings Account</label>
      </div>
      <div class="container">
        <button type="submit" class="btn btn-outline-dark mt-2 mx-auto d-block">Create Account</button>
      </div>
    </div>
  </div>
</form>