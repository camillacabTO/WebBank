{{> banner}}
<form action="/main" method="POST"> 
  <div class="card text-center" id="account-selection-box">
    <h5 class="card-header">Select an Account</h5>
    <div class="card-body">
      <div class="form-check my-1">
        <input type="radio" class="form-check-input" name="typeofaccount" id="checking-btn" value="Chequing" onclick="checkSelectedAccType()">
        <label class="form-check-label ml-5" for="checking">Checking Account</label>
      </div>
      <div class="form-check my-1">
        <input type="radio" class="form-check-input" id="savings-btn"name="typeofaccount" value="Savings" onclick="checkSelectedAccType()">
        <label class="form-check-label ml-5" for="savings">Savings Account</label>
      </div>
      <div class="container">
        <button type="submit" id="submit-btn"class="btn btn-outline-dark mt-2 mx-auto" disabled>Create Account</button>
        <a href="javascript:window.history.back()" class="btn btn-outline-dark text-center btn-size mt-2">Cancel</a>
      </div>
    </div>
  </div>
  {{#if accAlreadyExists}}
    <div class="alert alert-danger text-center w-25 mx-auto mt-3"> {{accountType}} Account already exists</div>
  {{/if}}
</form>

